.UCenter-bg {
  background-image: url(https://bpic.588ku.com/back_pic/04/40/46/35584f7ed697494.jpg);
  background-size: cover;
  height: 250rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
}

map,
.mapBox {
  width: 750rpx;
  height: 300rpx;
}

.scrollPage {
  background: #f4f4f4;
  height: 100vh;
  position: relative;
}

.wx_info {
  position: absolute;
  height: 80px;
  width: 100%;
  /* background: red; */
  z-index: 1000;
  top: 180rpx;
  padding: 0px 20rpx;
}

.wx_info_out {
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
  background: #fff;
  box-shadow: 1px 2px 4px #ccc;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}
.wx_info_wrap {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
}

.wx_info_userName {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 30rpx;
  color: var(--grey);
}

.name {
  font-size: 14px;
  margin-top: 30rpx;
  color: black;
}

.wx_info_text {
  font-size: 12px;
  margin-top: -20rpx;
}

.user_info {
  /* margin-top: 120rpx; */
  height: 300rpx;
  width: 100%;
  background: #fff;
}

.zhanwei {
  height: 160rpx;
  width: 100%;
  background: #fff;
}

.user_info_title {
  border-bottom: 1px solid #f4f4f4;
  padding-top: 20rpx;
  height: 100rpx;
}

.user_info_main {
  display: flex;
  justify-content: center;
  align-items: center;
}

.wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
}

.wrap_top {
  font-size: 20px;
  font-weight: bold;
  margin: 20rpx;
}

.left,
.right {
  font-size: 14px;
  display: inline-block;
  height: 24px;
  line-height: 22px;
  font-weight: normal;
  color: #fff;
  width: 50px;
  text-align: center;
  background-image: linear-gradient(to right, #6739b6, #b27df4);
  border: 1px solid #b27df4;
}

.left {
  margin-left: 20px;
  border-radius: 24px 0 0 24px;
}

.right {
  background-image: linear-gradient(to left, #6739b6, #b27df4);
  border-radius: 0px 24px 24px 0px;
}

.myactive {
  color: #b27df4;
  background: #fff;
}

.wrap_foot {
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn {
  font-size: 14px;
  display: inline-block;
  height: 24px;
  line-height: 24px;
  font-weight: normal;
  color: #fff;
  width: 60px;
  text-align: center;
  border-radius: 24px;
  background-image: linear-gradient(to right, #6739b6, #b27df4);
}

.color {
  color: #b27df4;
}

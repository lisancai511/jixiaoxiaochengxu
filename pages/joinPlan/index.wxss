  border-radius: 24px;
  padding: 0 12px;
}
.place-input {
  text-align: center;
}
.btn {
  width: 480rpx;
  margin: 0 auto;
  border-radius: 24px;
  background-color: #F9A42D!important;
}
.tip {
  margin-top: 64rpx;
  background: #eee;
  padding: 12px;
  color: #F9A42D;
  line-height: 32px;
}
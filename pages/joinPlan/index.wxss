
.title {
  text-align: center;
  font-size: 26px;
  padding: 40rpx;
  color:#F9A42D;
}

page {
  height: 100%;
}
.main {
  padding: 12px 24px;

}


.input {
  width: 480rpx;
  margin: 0 auto;
  height: 48px;
  line-height: 48px;
  margin-bottom: 24rpx;
